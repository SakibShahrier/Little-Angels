<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Details | Little Angels</title>
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/profile_info_style.css">
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header">
        <div class="container_0">
            <div class="navbar">
                <div class="logo">
                    <a href="../"><img src="../images/logo.png" width="170px"></a>
                </div>
                <nav>
                    <ul id="MenuItems">
                        <li><input type="search" id="search" placeholder="Search"></li>
                        <li class="underline"><a href="../adoption/">Adoption</a>
                            <div class="sub-menu-2">
                                <ul>
                                    <li><a href="../adoption/create-post">New Post</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="underline"><a href="/vets">Vets</a></li>
                        <li class="underline"><a href="/food_grocery">Food & Grocery</a></li>
                        <li class="underline"><a href="/happy_moments">Happy Moments</a></li>
                        <li class="underline"><a href="/emergency">Emergency Links</a></li>
                        <li class="underline"><a href="#">Account</a>
                            <div class="sub-menu">
                                <ul>
                                    <li id="login"><a href="/login">Login</a></li>
                                    <li id="register"><a href="/register">Register</a></li>
                                    <li id="profile"><a href="/profile">Profile</a></li>
                                    <li id="logout"><a href="/logout">Logout</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </nav>
                <img src="/images/menu.png" class="menu-icon" onclick="menuToggle()">
            </div>
        </div>
    </div>
    <div class="brain">
        <section id="aboutus">
            <div class="container">
                <div class="row">
                    <div class="col-sm-7">
                        <h2> <%= data.Name %> </h2>
                        <label class="static">E-Mail       : </label>
                        <span> <%= data.Email %> </span><br>
                        <label class="static">Gender       : </label>
                        <span> <%= data.Gender %> </span><br>
                        <input type="text" id="email" placeholder="Change E-Mail">
                        <input type="password" id="password" placeholder="Change Password">
                        <button class="btn" onclick="return hulululu()">Submit</button>
                    </div>
                    <div class="col-sm-5">
                        <div class="img-wrap">
                            <img src="../images/happy_moments-2.jpg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script>
        const MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";

        function menuToggle(){
            if(MenuItems.style.maxHeight == "0px"){
                MenuItems.style.maxHeight = "200px";
            }
            else{
                MenuItems.style.maxHeight = "0px";
            }
        }

        function test(){
            if(this.status == 200){
                window.location.replace('/profile');
            }
                
        }

        function hulululu(){
            var data = {
                email: document.getElementById('email').value,
                password: document.getElementById('password').value,
            }
            const http = new XMLHttpRequest()
            http.onload = test
            http.open('POST', '/changed')
            http.setRequestHeader('Content-type', 'application/json')
            http.send(JSON.stringify(data))
        }

        if(document.cookie.indexOf("email") < 0){
            document.getElementById("logout").style.display = "none";
            document.getElementById("profile").style.display = "none";
        }else{
            document.getElementById("login").style.display = "none";
            document.getElementById("register").style.display = "none";
        }
    </script>
</body>
</html>