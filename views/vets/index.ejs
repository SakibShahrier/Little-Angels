<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vets | Little Angels</title>
    <link rel="stylesheet" href="/css/vets_style.css">
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
</head>
<body>
    <div class="header">
        <div class="container_0">
            <div class="navbar">
                <div class="logo">
                    <a href="/"><img src="/images/logo.png" width="170px"></a>
                </div>
                <nav>
                    <ul id="MenuItems">
                        <li><input type="search" id="search" placeholder="Search"></li>
                        <li class="underline"><a href="../adoption/">Adoption</a>
                            <div class="sub-menu-2">
                                <ul>
                                    <li><a href="../adoption/create-post">New Post</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="underline"><a href="#">Vets</a></li>
                        <li class="underline"><a href="/food_grocery">Food & Grocery</a></li>
                        <li class="underline"><a href="/happy_moments">Happy Moments</a></li>
                        <li class="underline"><a href="/emergency">Emergency Links</a></li>
                        <li class="underline"><a href="">Account</a>
                            <div class="sub-menu">
                                <ul>
                                    <li id="login"><a href="/login">Login</a></li>
                                    <li id="register"><a href="/register">Register</a></li>
                                    <li id="profile"><a href="/profile">Profile</a></li>
                                    <li id="logout"><a href="/logout">Logout</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </nav>
                <img src="/images/menu.png" class="menu-icon" onclick="menuToggle()">
            </div>
        </div>
    </div>
    <div class="container">
        <% for(var vet of vets){ %>
        <div class="card">
            <div class="imgBox"><img src="/images/happy_moments-1.jpeg" alt=""></div>
            <h4><%= vet.Name %></h4>
            <h5><%= vet.Designation %></h5>
            <p><%= vet.Dept %></p>
            <a href="/vets/profile_info/<%= vet.Id %>">Read more</a>
        </div>
        <% } %>
    </div>
    <div class="container page-btn">
        <span>&#8592;</span>
        <span>&#8594;</span>
    </div>

    <script>
        const MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";

        function menuToggle(){
            if(MenuItems.style.maxHeight == "0px"){
                MenuItems.style.maxHeight = "200px";
            }
            else{
                MenuItems.style.maxHeight = "0px";
            }
        }

        if(document.cookie.indexOf("email") < 0){
            document.getElementById("logout").style.display = "none";
            document.getElementById("profile").style.display = "none";
        }else{
            document.getElementById("login").style.display = "none";
            document.getElementById("register").style.display = "none";
        }
    </script>
</body>
</html>