<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Food & Grocery - Little Angels</title>
	<link rel="stylesheet" type="text/css" href="/css/food_style.css">
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="logo">
                <a href="../"><img src="../images/logo.png" width="170px" alt=""></a>
            </div>
            <nav>
                <ul id="MenuItems">
                    <li><input type="search" id="search" placeholder="Search"></li>
                    <li class="underline"><a href="../adoption/">Adoption</a>
                        <div class="sub-menu-2">
                            <ul>
                                <li><a href="../adoption/create-post">New Post</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="underline"><a href="/vets">Vets</a></li>
                    <li class="underline"><a href="/food_grocery">Food & Grocery</a></li>
                    <li class="underline"><a href="/happy_moments">Happy Moments</a></li>
                    <li class="underline"><a href="/emergency">Emergency Links</a></li>
                    <li class="underline"><a href="#">Account</a>
                        <div class="sub-menu">
                            <ul>
                                <li id="login"><a href="/login">Login</a></li>
                                <li id="register"><a href="/register">Register</a></li>
                                <li id="profile"><a href="/profile">Profile</a></li>
                                <li id="logout"><a href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </nav>
            <img src="../images/menu.png" class="menu-icon" onclick="menuToggle()" alt="">
        </div> 
    </div>
    
    <div class="small-container">
        <div class="row row-2">
            <h2>All Items</h2>
            <select>
                <option>Default Sorting</option>
                <option>Sort By Price</option>
                <option>Sort By Rating</option>
            </select>
        </div>
    <% if(count % 4 === 0) { %>
    <%    count = count / 4; %>
    <%  }else{               %>
    <%    count = (count / 4) + 1; %>
    <%  }                    %>
    <%  var r = 0; %>

    <% for(var i = 1; i <= count; ++i){ %>
        <div class="row">
            <% for(var j = 0; j < 4; ++j, ++r){ %>
            <div class="col-4">
                <img src="<%= foods[r].File %>">
                <h4> <%= foods[r].Name %> </h4>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                </div><br>
                <p><%= foods[r].Price %> BDT</p>
            </div>
                <% if(r >= total - 1){ %>
                    <% break; %>
                <% } %>
            <% } %>
        </div>
    <% } %>      
        <div class="page-btn">
            <span>&#8592;</span>
            <span>&#8594;</span>
        </div>
    </div>
    
<!--footer-->
    
    <script>
        let MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";
        
        function menuToggle(){
            if(MenuItems.style.maxHeight == "0px"){
                MenuItems.style.maxHeight = "200px";
            }
            else{
                MenuItems.style.maxHeight = "0px";
            }
        }

        if(document.cookie.indexOf("email") < 0){
            document.getElementById("logout").style.display = "none";
            document.getElementById("profile").style.display = "none";
        }else{
            document.getElementById("login").style.display = "none";
            document.getElementById("register").style.display = "none";
        }
    </script>
</body>
</html>