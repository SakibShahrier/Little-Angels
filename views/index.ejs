<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Little Angels | One Stop Solution For Pets</title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
</head>
<body>
    <div class="header">
    <div class="container">
        <div class="navbar">
            <div class="logo">
                <a href="/"><img src="images/logo.png" width="170px"></a>
            </div>
            <nav>
                <ul id="MenuItems">
                    <li><input type="search" id="search" placeholder="Search"></li>    
                    <li class="underline"><a href="adoption/">Adoption</a>
                        <div class="sub-menu-2">
                            <ul>
                                <li><a href="adoption/create-post">New Post</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="underline"><a href="/vets">Vets</a></li>
                    <li class="underline"><a href="/food_grocery">Food & Grocery</a></li>
                    <li class="underline"><a href="/happy_moments">Happy Moments</a></li>
                    <li class="underline"><a href="/emergency">Emergency Links</a></li>
                    <li class="underline"><a href="">Account</a>
                        <div class="sub-menu">
                            <ul>
                                <li id="login"><a href="/login">Login</a></li>
                                <li id="register"><a href="/register">Register</a></li>
                                <li id="profile"><a href="/profile">Profile</a></li>
                                <li id="logout"><a href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </nav>
            <img src="images/menu.png" class="menu-icon" onclick="menuToggle()">
        </div>
        <div class="row">
            <div class="col-2">
                <h1>Love Is A Four Legged Word!</h1>
                <p>"It takes nothing away from a human to be kind to an animal"</p>
                <a href="" class="btn">Explore Now &#8594;</a>
            </div>
            <div class="col-2">
                <img src="images/image1.jpg">
            </div>
        </div>
    </div>
    </div>
    
<!--featured categories-->
    <div class="categories">
        <div class="small-container">
            <h2 class="title">Services</h2>
            <div class="row">
                <div class="col-3">
                    <img src="images/category-1.jpg">
                </div>
                <div class="col-3">
                    <img src="images/category-2.jpg">
                </div>
                <div class="col-3">
                    <img src="images/category-3.jpg">
                </div>
            </div>
        </div>
    </div>
    
<!--featured producsts-->
    <div class="small-container">
        <h2 class="title">Featured Products</h2>
        <div class="row">
            <% for(var i = 0; i < productCount; ++i){ %>
            <div class="col-4">
                <img src="images/product-1.png">
                <h4>Whiskas Dry Cat Food (Adult)</h4>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                </div><br>
                <p>à§³400</p>
            </div>
            <% } %>
        </div>
        <h2 class="title">Best Moments</h2>
        <div class="row_1 owl-carousel">
            <% for(var i = 0; i <= bestMoments; ++i){ %>
            <div class="col-5">
                <img src="images/happy_moments-3.jpeg">
                <h4>Time</h4>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    
<!--testimonial-->
<!--brand widget-->
<!--footer-->
    
    <script>
        $(".row_1").owlCarousel({
            loop: true,
            autoplay: true,
            autoplayTimeout: 2000,
            autoplayHoverPause: true,
        });
        var MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";
        
        function menuToggle(){
            if(MenuItems.style.maxHeight == "0px"){
                MenuItems.style.maxHeight = "200px";
            }
            else{
                MenuItems.style.maxHeight = "0px";
            }
        }

        if(document.cookie.indexOf("email") < 0){
            document.getElementById("logout").style.display = "none";
            document.getElementById("profile").style.display = "none";
        }else{
            document.getElementById("login").style.display = "none";
            document.getElementById("register").style.display = "none";
        }

    </script>
</body>
</html>